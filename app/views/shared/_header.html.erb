<header class="header">
  <div class="header-content">
    <%= link_to root_path, class: "logo" do %>
      <%= image_tag "logo.png", alt: "Kids Journal Logo", class: "logo-image" %>
    <% end %>

    <% if user_signed_in? %>
      <div class="header-actions">
        <%= link_to 'ログアウト', destroy_user_session_path, 
              class: "logout-btn", 
              data: { turbo_method: :delete } %>
        <%= link_to search_records_path, class: "icon-btn" do %>
          <%= image_tag "find.png", alt: "検索", class: "icon-image" %>
        <% end %>
      </div>
    <% end %>
  </div>
</header>