<%= render 'shared/error_messages', model: @height_weight %>

<div>
  <div>
    <%= form.label :recorded_on, "記録日" %>
    <%= form.date_field :recorded_on %>
  </div>

  <div>
    <%= form.label :height, "身長 (cm)" %>
    <%= form.number_field :height, step: :any, placeholder: "例: 80.5" %>
  </div>

  <div>
    <%= form.label :weight, "体重 (kg)" %>
    <%= form.number_field :weight, step: :any, placeholder: "例: 10.2" %>
  </div>

  <div>
    <%= form.submit (@height_weight.new_record? ? "記録を保存" : "記録を更新") %>
  </div>
</div>