<%= render 'shared/error_messages', model: @height_weight %>

<div class="height-weight-form">
  <div class="form-group">
    <%= form.label :recorded_on, "記録日", class: "form-label" %>
    <%= form.date_field :recorded_on, class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :height, "身長 (cm)", class: "form-label" %>
    <%= form.number_field :height, step: :any, placeholder: "例: 80.5", class: "form-input" %>
  </div>

  <div class="form-group">
    <%= form.label :weight, "体重 (kg)", class: "form-label" %>
    <%= form.number_field :weight, step: :any, placeholder: "例: 10.2", class: "form-input" %>
  </div>

  <div class="form-group">
    <%= link_to '戻る', child_height_weights_path(@child), class: 'btn btn-secondary btn-full' %>
    <%= form.submit "保存", class: "btn btn-primary btn-full" %>
  </div>
</div>