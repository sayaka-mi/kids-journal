<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class: "links-btn" %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p>アカウントをお持ちでない方<br>
  <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "links-btn" %></p>
<% end -%>

<%- if controller_name != 'sessions' %>
  <p>既にアカウントをお持ちの方<br>
  <%= link_to "ログインはこちら", new_session_path(resource_name), class: "links-btn" %></p>
<% end -%>