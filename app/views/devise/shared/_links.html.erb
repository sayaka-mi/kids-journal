<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="devise-link-wrap">
    <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class: "btn btn-secondary btn-fixed-width" %>
  </div>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="devise-link-wrap">
    <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "btn btn-secondary btn-fixed-width" %>
  </div>
<% end %>

<% if controller_name != 'sessions' %>
  <div class="devise-link-wrap">
    <%= link_to "ログインはこちら", new_session_path(resource_name), class: "btn btn-secondary btn-fixed-width" %>
  </div>
<% end %>